<h2 class="page-header">Search Genres</h2>

<form action="/genres" method="GET">
  <label for="">Name</label>
  <input type="text" name="name" value="<%=searchOptions.name%>" />
  <button type="submit">Search</button>
</form>
<br />
<%genres.forEach(genre=>{%>
<div><%=genre.name%></div>
<div class="btn-row">
  <a class="btn btn-primary" href="/genres/<%= genre.id%>">View</a>
  <a class="btn btn-primary" href="/genres/<%= genre.id%>/edit">Edit</a>
  <%- include('../partials/deleteForm', {url:`/genres/${genre.id}`})%> <%}) %>
</div>
