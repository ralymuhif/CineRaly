<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= movie.title %>" />
</div>
<div>
  <label>Genre</label>
  <select name="genre">
    <% genres.forEach(genre => { %> <% if (genre.id === movie.genre) { %>
    <option selected label="<%= genre.name %>" value="<%= genre.id %>">
      <% } else { %>
    </option>

    <option label="<%= genre.name %>" value="<%= genre.id %>">
      <% } %> <% }) %>
    </option>
  </select>
</div>
<div>
  <label>Release Date</label>
  <input
    type="date"
    name="releaseDate"
    value="<%= movie.releaseDate == null ? '' : movie.releaseDate.toISOString().split('T') [0] %>"
  />
</div>
<div>
  <label>Length</label>
  <input type="number" name="length" min="1" value="<%= movie.length  %>" />
</div>
<div>
  <label>Cover</label>
  <input type="file" name="cover" class="filepond" />
</div>
<div>
  <label>Description</label>
  <textarea name="description">
     <%= movie.description %>
  </textarea>
</div>
